			</list>
		</property>
		<property name="interceptorNames">
			<list>
				<value>gargleAdvisor</value>
			</list>
		</property>
	</bean>-->

	<bean id="advisorAutoProxy" class="org.springframework.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator" />



</beans>
